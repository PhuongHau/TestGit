<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:background="@color/background"
        android:textSize="28sp"
        android:textColor="@color/chutrang"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/chuden"
        android:textAlignment="center"
        android:text="Số lượng từ mỗi ngày"
        android:gravity="center_horizontal"></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/caidat_btntru"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_tru"
            tools:ignore="InvalidId"></ImageButton>
        <TextView
            android:id="@+id/caidat_txtsoluongtu"
            android:layout_width="200dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="0"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/chutrang"
            android:outlineSpotShadowColor="@color/background">
        </TextView>
        <ImageButton
            android:id="@+id/caidat_btncong"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24"
           >

        </ImageButton>
    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/chuden"
        android:textAlignment="center"
        android:text="Chế độ luyện từ"
        android:gravity="center_horizontal"></TextView>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <RadioButton
            android:id="@+id/caidat_rdoeng"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:checked="true"
            android:background="@drawable/radius"
            android:text="Cho từ chọn nghĩa"
            android:gravity="center" />
        <RadioButton
            android:id="@+id/caidat_rdoviet"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/radius"
            android:text="Cho nghĩa chọn từ" />
    </RadioGroup>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/caidat_btnLuu"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/luyentu_button"
            android:text="Lưu"></Button>
        <Button
            android:id="@+id/caidat_btnThoat"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/luyentu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở về"></Button>
</LinearLayout>

</LinearLayout>